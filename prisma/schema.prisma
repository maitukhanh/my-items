// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Location {
  id        String   @id @default(uuid())
  name      String   @unique
  items     Item[]
  createdAt DateTime @default(now())
}

model Item {
  id          String    @id @default(uuid())
  name        String
  // Giữ trường location cũ (String) để không mất dữ liệu cũ, nhưng làm cho nó optional
  legacyLocation String? 
  
  // Trường location mới (Relation)
  location    Location? @relation(fields: [locationId], references: [id])
  locationId  String?
  
  imageUrl    String?
  createdAt   DateTime  @default(now())
}
